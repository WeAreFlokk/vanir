{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (AspnetCore Sample)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build aspnetcore sample",
            "program": "${workspaceFolder}/Samples/Source/Aspnetcore/Backend/bin/Debug/net5.0/Backend.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Samples/Source/Aspnetcore/Backend",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": ".NET Core Launch (CLI)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build CLI",
            "program": "${workspaceFolder}/Source/Tooling/CLI/bin/Debug/net5.0/Dolittle.Vanir.CLI.dll",
            "args": ["proxy", "../../../Samples/Source/Aspnetcore/Backend/bin/Debug/net5.0/Backend.dll", "../../../Samples/Source/Aspnetcore/Web/proxies"],
            "cwd": "${workspaceFolder}/Source/Tooling/CLI",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Launch TypeScript Sample",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "node",
            "runtimeArgs": ["--nolazy", "-r", "ts-node/register/transpile-only"],
            "args": ["${workspaceFolder}/Samples/Source/Typescript/Backend/index.ts"],
            "cwd": "${workspaceFolder}/Samples/Source/Typescript/Backend",
            "preLaunchTask": "tsc: build - Typescript Sample",
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ]
        }
    ]
}
